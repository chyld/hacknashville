extends ../shared/template


block content
  
  link(rel='stylesheet', href='/less/edit.css')



  .row
    h1 Edit your profile


    form#artistInfo(role='form', method='POST', action='/profile/edit')
      legend Artist Info
      .col-sm-4
        .form-group
          label Name
          input.form-control(name='name', placeholder='Steven')
        .form-group
          label Email
          input.form-control(name='email', placeholder='steven@nomail.com')
        .form-group
          label Address or Zipcode
          input.form-control(name='address', placeholder='472 Evergreen Terrace')
          input(type='hidden', name='lat')
          input(type='hidden', name='lng')
        button#submit Submit
      .col-sm-6
        .form-group
          label Bio
          textarea.form-control(name='bio', rows='3', placeholder='Your life story here pls')

block scripts
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBZ7f53mzZHfIF5Guqu3TrbhPNuaxsu6Fc&sensor=true')
  script(src='../js/source/updateProfile.js')
