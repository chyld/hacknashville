.card
  .row
    .col-offset-1.col-md-11
      .well.profile
        .col-sm-12
          .col-xs-12.col-sm-8
            h2= email
            p
              strong About:
            p
              strong Influences:
            p
              strong Skills:
                each skill in skills
                  span.tags= skill
          .col-xs-12.col-sm-4.text-center
            figure
              if artist.artistPhoto
                img.img-circle.img-responsive(src=artist.artistPhoto, alt='')
              figcaption.ratings
                p
                  | Ratings
                  a(href='#')
                    span.fa.fa-star
                  a(href='#')
                    span.fa.fa-star
                  a(href='#')
                    span.fa.fa-star
                  a(href='#')
                    span.fa.fa-star
                  a(href='#')
                    span.fa.fa-star-o
        .col-xs-12.divider.text-center
          .col-xs-12.col-sm-4.emphasis
            h2
              strong  SMS Text
            p
              small send your email to:
                span=email
            if phone
              button.btn.btn-success.smsText
                span.glyphicon.glyphicon-comment(style='margin-right:5px')
                span.smsNumber= phone
          .col-xs-12.col-sm-4.emphasis
            h2
              strong Email
            p
            a.btn.btn-info.sendEmail(href='mailto:' + email + '?Subject=Timbre:%20' + artist.email + '%20wants%20to%20jam!')
              span.glyphicon.glyphicon-envelope(style='margin-right:5px')
              span.emailAddress=email
          .col-xs-12.col-sm-4.emphasis
            h2
              strong Links
            if soundCloud
              button.btn.button-highlight.soundCloud(style='margin:5px') soundCloud
            a.btn.button-primary.cardProfile(style='margin:5px', href='/artists/' + _id)
              span.glyphicon.glyphicon-user(style='margin-right:5px')
              span Profile
      .soundCloud-container(style='margin-left:200px')
        iframe(width='100%', height='300', scrolling='no', frameborder='no', src=soundCloud)

